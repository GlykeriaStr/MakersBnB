  <div class='log-out-button'>
  <form action="/sessions/destroy" method='post'>
<input type='submit' value='Log Out'>
</form>
</div>

<div class='listings'>
<% @spaces.map do | space | %>
<div class="card" style="width: 18rem;">
  <%# <img src="/imag" class="card-img-top" alt="..."> %>
  <div class="card-body">
    <h5 class="card-title"><%= space.name %> - Â£<%= space.cost %></h5>
    <p class="card-text"><%= space.description %></p>
    <% if space.availability == "t" && space.user_id != session[:user_id] %>
    <a href="/spaces/<%= space.id %>" class="btn btn-primary">Request Booking</a>
<% end %>

  </div>
</div>
<% end %>
</div>
<div class="list-a-space-button">
<a href='spaces/new'> <button type="button" class="btn btn-success">List a Space</button></a>
</div>
